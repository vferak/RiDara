{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "assets": [
            {"include": "../config/*.yaml", "outDir": "./dist/config", "watchAssets": true},
            {"include": "../public/**", "outDir": "./dist/public", "watchAssets": true}
        ]
    }
}
